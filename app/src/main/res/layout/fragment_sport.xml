<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Spinner
        android:id="@+id/time_of_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kinds_of_sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@+id/length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_of_day">

        <ToggleButton
            android:id="@+id/running"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_running_toggle"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/exercise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_exercise_toggle"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stretching"
            app:layout_constraintStart_toEndOf="@id/running"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/stretching"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_stretching_toggle"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/yoga"
            app:layout_constraintStart_toEndOf="@+id/exercise"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/yoga"
            android:layout_width="0dp"
            android:layout_height="00dp"
            android:background="@drawable/ic_yoga_toggle"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cycling"
            app:layout_constraintStart_toEndOf="@+id/stretching"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/cycling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cycling_toggle"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/walking"
            app:layout_constraintStart_toEndOf="@+id/yoga"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/walking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_walking_toggle"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cycling"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:hint="length in min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kinds_of_sports" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/length_helper_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintTop_toBottomOf="@id/length">

        <Button
            android:id="@+id/min_60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="60 min"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/min_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/min_30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/min_10"
            app:layout_constraintStart_toEndOf="@+id/min_60"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/min_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10 min"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/min_5"
            app:layout_constraintStart_toEndOf="@+id/min_30"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/min_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5 min"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/min_clear"
            app:layout_constraintStart_toEndOf="@id/min_10"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/min_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_delete"
            android:text="delete"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/min_5"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/submit_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:onClick="addNewSport"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>